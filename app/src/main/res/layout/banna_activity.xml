<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:gravity="center"
    android:background="#FFFFFF"


    >

    <ImageView
        android:id="@+id/pageImg"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/banna"
        android:contentDescription="Banna"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Banna"
        android:textSize="40sp"
        android:fontFamily="sans-serif-black"
        android:layout_below="@+id/pageImg"
        android:textAlignment="center"
        android:padding="20dp"
        android:textColor="#B2A505"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text='"Banna" can refer to an Omotic ethnic group in Ethiopia who are cattle herders and farmers, or it can be a term of address for young Rajput men in India, particularly in the context of wedding songs (Banna-Banni Geets). The meaning depends on the context, with the Ethiopian Banna being a distinct group and the Indian "Banna" being a respectful title.
'
        android:layout_below="@+id/title"
        android:padding="20dp"
        android:textColor="#B2A505"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>